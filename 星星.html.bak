<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title></title>
		<style type="text/css">
			body{
				background: url(img/bg.jpg) no-repeat;
				background-size: 100%;
			}
			.star{
				position: absolute;left:0;top:0;width:20px;height: 20px;
			}
		</style>
	</head>
	<body>
	</body>
</html>
<script src="js/jquery-1.11.1.min.js"></script>
<script type="text/javascript">
	function Star(){
		this.ele='<div class="star"><img src="img/snow.gif"></div>'
		this.fly=function(a,b){
			var timer=setInterval(function(){
				var left1 = Math.random()*1300+50;
				var top1 = Math.random()*500;
				var left2 = Math.random()*1300+50;
				var top2 = Math.random()*500;
				var sta = new Star()
				$('body').append(sta.ele);
				$('.star').css({'left':left1,'top':top1})
				$(".star").animate({"left":a,"top":b},1000)
				sta.fly(left2,top2)
			},1000)	
			if($('.star').length>20){
				clearInterval(timer)
			}
		}	
	}
	var star1=new Star()
	star1.fly()
</script>